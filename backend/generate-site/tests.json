{
  "tests": [
    {
      "name": "Health check - OPTIONS request",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200
    },
    {
      "name": "Generate site with valid prompt",
      "method": "POST",
      "path": "/",
      "body": {
        "prompt": "Простая landing page для кофейни"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "code": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Reject empty prompt",
      "method": "POST",
      "path": "/",
      "body": {
        "prompt": ""
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}
